<h1>Parts For Robot: <%= @robot.name %></h1>

<% if @parts.any? %>
 
   <ul class="collapsible" data-collapsible="accordion"><% @parts.each do |part| %>
			<li>
      	<div class="collapsible-header"><%= part.name %></div>
      	<div class="collapsible-body">
	      	<p>Part: <%= part.number %></p>
	      	<p>
	      		<%= link_to 'Edit', edit_robot_part_path(@robot, part), class: 'btn' %>
	      		<%= link_to 'Delete', robot_part_path(@robot, part), method: :delete, data: {confirm: 'sure?'}, class: "btn"%> 
	      	</p>
      	</div>
   		</li>
		<%end %>
		</ul>
<% else %>
	<h3>No parts yet</h3>
<% end %>

<%= link_to 'New Part', new_robot_part_path(@robot), class: 'btn' %>